<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.Sequenia.Toolbar"
		parent="Widget.MaterialComponents.Toolbar.PrimarySurface"/>

	<style name="Theme.Sequenia.CardView"
		parent="Widget.MaterialComponents.CardView">

		<item name="cardCornerRadius">@dimen/medium_corner_radius</item>
	</style>

	<style name="Theme.Sequenia.DescriptionText">
		<item name="android:textSize">@dimen/description_text_size</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
	</style>

	<style name="Theme.Sequenia.AppBarTitle">
		<item name="android:layout_marginEnd">@dimen/medium_margin_padding</item>
		<item name="android:textSize">@dimen/appBarTitleTextSize</item>
		<item name="android:textColor">?attr/colorOnPrimary</item>
		<item name="android:textStyle">bold</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>
</resources>